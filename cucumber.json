{
  "default": {
    "paths": [
      "src/features/**/*.feature"
    ],
    "dryRun": false,
    "format": [
      "progress-bar",
      "html:reports/cucumber-report.html"
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "require": [
      "src/step-definitions/**/*.ts",
      "src/utils/**/*.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ]
  }
}